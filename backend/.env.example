# Vow Backend Environment Variables
# Copy this file to .env and fill in the values

# Application
APP_NAME=Vow Backend API
APP_VERSION=1.0.0
DEBUG=true

# Database - Primary (RDS in production, local PostgreSQL in development)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/vow_dev

# Database - Supabase (Migration period only)
# SUPABASE_URL=https://your-project.supabase.co
# SUPABASE_DATABASE_URL=postgresql://postgres:password@db.your-project.supabase.co:5432/postgres
# MIGRATION_MODE=false

# JWT Authentication
# In production, use a strong secret key (at least 32 characters)
JWT_SECRET=dev-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_AUDIENCE=authenticated
# JWT_ISSUER=https://your-project.supabase.co/auth/v1

# CORS
# Comma-separated list of allowed origins
CORS_ORIGINS=["http://localhost:3000"]

# Slack Integration (optional)
SLACK_ENABLED=false
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/xxx/yyy/zzz

# OpenAI Integration (optional)
OPENAI_ENABLED=false
# OPENAI_API_KEY=sk-xxx
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_REQUESTS_PER_MINUTE=60
