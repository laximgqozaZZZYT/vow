# Backend environment variables (example)
# Copy to `.env` and fill in your local/dev values.

# MySQL container (docker-compose)
MYSQL_ROOT_PASSWORD=password
MYSQL_DATABASE=vowdb
MYSQL_USER=vowuser
MYSQL_PASSWORD=vowpass
MYSQL_PORT=3307

# Prisma connections
# Note: Use 127.0.0.1 (not localhost) to avoid socket resolution surprises.
DATABASE_URL="mysql://vowuser:vowpass@127.0.0.1:3307/vowdb"
# Prisma migrate dev uses a shadow DB; root is commonly required to create/drop schemas.
SHADOW_DATABASE_URL="mysql://root:password@127.0.0.1:3307/vowdb_shadow"

# Supabase JWT Authentication (REQUIRED for production)
SUPABASE_JWKS_URL="https://your-project.supabase.co/.well-known/jwks.json"
SUPABASE_JWT_AUD="authenticated"
SUPABASE_JWT_ISS="https://your-project.supabase.co/auth/v1"

# Frontend URL for OAuth redirects (REQUIRED for production)
FRONTEND_URL="https://your-domain.com"

# OAuth Configuration
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
GITHUB_CLIENT_ID="your-github-client-id"
GITHUB_CLIENT_SECRET="your-github-client-secret"

# Security Settings
NODE_ENV=development
VOW_COOKIE_SECURE=false  # Set to true in production with HTTPS
CORS_ORIGINS="http://localhost:3000,http://localhost:3001"  # Comma-separated list

# OAuth (optional)
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""
GITHUB_CLIENT_ID=""
GITHUB_CLIENT_SECRET=""
