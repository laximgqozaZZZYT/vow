# =================================================================
# Backend Environment Variables - EXAMPLE
# Copy this file to .env and fill in your values
# =================================================================
# Usage:
#   cp .env.example .env
#   # Edit .env with your actual values
# =================================================================

# Application
ENV=development
DEBUG=true

# Database (Aurora/RDS)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/vow_dev
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=vow_dev

# JWT Authentication (Supabase - legacy)
JWT_SECRET=dev-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_AUDIENCE=authenticated

# Cognito Authentication (AWS)
AUTH_PROVIDER=cognito
COGNITO_USER_POOL_ID=ap-northeast-1_xxxxxxxxx
COGNITO_CLIENT_ID=your-cognito-client-id
COGNITO_REGION=ap-northeast-1

# Slack Integration
SLACK_CLIENT_ID=your-slack-client-id
SLACK_CLIENT_SECRET=your-slack-client-secret
SLACK_SIGNING_SECRET=your-slack-signing-secret
SLACK_CALLBACK_URI=https://your-api-gateway.execute-api.ap-northeast-1.amazonaws.com/development/api/slack/callback
TOKEN_ENCRYPTION_KEY=your-fernet-encryption-key

# Supabase (for Slack connection storage)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key

# CORS
CORS_ORIGINS=["http://localhost:3000","https://main.do1k9oyyorn24.amplifyapp.com"]

# OpenAI (optional)
OPENAI_API_KEY=
OPENAI_ENABLED=false
