# Backend environment variables (example)
# Copy to `.env` and fill in your local/dev values.

# MySQL container (docker-compose)
MYSQL_ROOT_PASSWORD=password
MYSQL_DATABASE=vowdb
MYSQL_USER=vowuser
MYSQL_PASSWORD=vowpass
MYSQL_PORT=3307

# Prisma connections
# Note: Use 127.0.0.1 (not localhost) to avoid socket resolution surprises.
DATABASE_URL="mysql://vowuser:vowpass@127.0.0.1:3307/vowdb"
# Prisma migrate dev uses a shadow DB; root is commonly required to create/drop schemas.
SHADOW_DATABASE_URL="mysql://root:password@127.0.0.1:3307/vowdb_shadow"
