{
  "name": "vow-backend",
  "version": "1.0.0",
  "description": "TypeScript backend for Vow habit tracking application using Hono framework",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@hono/node-server": "^1.13.7",
    "@hono/zod-validator": "^0.4.2",
    "@supabase/supabase-js": "^2.47.10",
    "hono": "^4.6.14",
    "jose": "^5.9.6",
    "openai": "^6.16.0",
    "stripe": "^17.5.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.160",
    "@types/node": "^22.10.2",
    "fast-check": "^3.23.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "keywords": [
    "hono",
    "typescript",
    "lambda",
    "habit-tracking",
    "slack"
  ],
  "author": "",
  "license": "MIT"
}
