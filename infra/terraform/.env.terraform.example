# =================================================================
# Terraform Environment Variables - EXAMPLE
# Copy this file to .env.terraform and fill in your values
# =================================================================
# Usage:
#   cp .env.terraform.example .env.terraform
#   # Edit .env.terraform with your actual values
#   source .env.terraform
#   terraform plan
#   terraform apply
# =================================================================

# Slack Integration
# Get these from https://api.slack.com/apps
export TF_VAR_slack_client_id="your-slack-client-id"
export TF_VAR_slack_client_secret="your-slack-client-secret"
export TF_VAR_slack_signing_secret="your-slack-signing-secret"
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
export TF_VAR_token_encryption_key="your-fernet-encryption-key"

# Supabase (for Slack connection storage)
# Get these from your Supabase project settings
export TF_VAR_supabase_url="https://your-project.supabase.co"
export TF_VAR_supabase_anon_key="your-supabase-anon-key"

# Cognito OAuth (Google)
# Get these from Google Cloud Console > APIs & Services > Credentials
export TF_VAR_google_client_id="your-google-client-id.apps.googleusercontent.com"
export TF_VAR_google_client_secret="your-google-client-secret"

# Cognito OAuth (GitHub)
# Get these from GitHub > Settings > Developer settings > OAuth Apps
export TF_VAR_github_client_id="your-github-client-id"
export TF_VAR_github_client_secret="your-github-client-secret"

# Amplify
# Create a GitHub Personal Access Token with repo scope
export TF_VAR_github_access_token="ghp_your-github-access-token"

# DMS (Supabase to Aurora migration)
# Only needed if enable_dms = true
export TF_VAR_supabase_host="db.your-project.supabase.co"
export TF_VAR_supabase_password="your-supabase-db-password"

# Monitoring
# Email to receive CloudWatch alerts
export TF_VAR_alert_email="your-email@example.com"
